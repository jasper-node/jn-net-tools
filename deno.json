{
  "name": "@controlx-io/jn-net-utils",
  "version": "0.1.0",
  "description": "",
  "tasks": {
    "lint": "deno lint --ignore='**/*_test.ts,**/*.test.ts,**/tests/**'",
    "check": "deno check **/*.ts && deno fmt --check && deno task lint",
    "build": "deno task test:rust && deno task build:rust",
    "build:rust": "deno run -A scripts/build.ts --release",
    "test:ts": "deno test -A",
    "test:rust": "cargo test",
    "test": "deno task check && deno task test:ts && deno task test:rust"
  },
  "compilerOptions": {
    "lib": [
      "deno.unstable",
      "deno.ns",
      "dom"
    ],
    "types": [
      "npm:@types/node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "tmp/**/*"
  ],
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "fast-xml-parser": "npm:fast-xml-parser@5.3.2",
    "json-stringify-pretty-compact": "npm:json-stringify-pretty-compact@4.0.0"
  },
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "./src/mod.ts",
      "./src/",
      "./scripts/download-binaries.ts",
      "./README.md"
    ],
    "exclude": [
      "./ethercrab/",
      "./src/tests/",
      "./src/__specs__/",
      "./src/utils/__specs__/",
      "./lib/libethercrab_ffi_dev.dylib",
      "./lib/libethercrab_ffi_dev.so",
      "./lib/libethercrab_ffi_dev.dll"
    ]
  }
}
